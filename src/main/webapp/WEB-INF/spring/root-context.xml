      id="transactionManager" 
      class="org.springframework.jdbc.datasource.DataSourceTransactionManager">

      <property name="dataSource" ref="hikariDataSource" />

    </bean>

    4th. annotation config 
    <tx:annotation-driven /> -->
      
</beans>